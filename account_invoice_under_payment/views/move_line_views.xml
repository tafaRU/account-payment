<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="move_line_view_under_payment" model="ir.ui.view">
            <field name="name">moveline.under_payment</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@string='Information']" position="after">
                    <page string="Payment Lines">
                        <field name="payment_line_ids">
                            <tree string="Payment Line">
                                    <field name="ml_inv_ref" />
                                    <field name="partner_id"/>
                                    <field name="communication"/>
                                    <field name="bank_id" domain="[('partner_id', '=', partner_id)]"/>
                                    <field name="ml_maturity_date"/>
                                    <field name="date"/>
                                    <field name="amount_currency" string="Amount"/>
                                    <field name="currency"/>
                                    <field name="name"/>
                                    <field name="failed"/>
                                    <field name="amount" sum="Total in Company Currency" invisible="1"/>
                                </tree>
                        </field>
                    </page>
                </xpath>
                <xpath expr="//field[@name='period_id']" position="after">
                    <field name="under_payment"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
